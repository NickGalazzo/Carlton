@using Carlton.Base.Client.State

@inherits CarltonComponentBase<StatusSwitchViewModel>

<div class="component-status-switch">
    <div class="btn-group">
        @foreach(var status in Enum.GetValues(typeof(ComponentStatus)).Cast<ComponentStatus>())
        {
            <button type="button" class="btn btn-info" @onclick="async () =>await base.OnComponentEvent.InvokeAsync(new StatusSwitchStatusChangedEvent { ComponentStatus = status })">
                @Enum.GetName(typeof(ComponentStatus), status)
            </button>
        }
    </div>
</div>

