@using Carlton.Base.Client.Components.Tab

@inherits LayoutComponentBase
@inject TestBedService service

<div class="sidebar">
    <TestBedNavTree ViewModel="service.TreeItems" SelectedItemChanged="service.SelectItem" />
</div>

<div class="main">
    <div class="content px-4">
        <TestBed ComponentType="service.TestComponentType" IsCarltonComponent="service.TestComponentIsCarltonComponent" ViewModel="service.TestComponentViewModel" ComponentEventCallback="service.AddComponentEvent" />
    </div>

    @if(service.TestComponentIsCarltonComponent)
    {
        <footer class="footer">
            <CarltonTabBar>
                <CarltonTab DisplayText="Component Events">
                    <EventConsole ComponentEvents="service.ComponentEvents" ClearEvents="service.ClearEvents"></EventConsole>
                </CarltonTab>
                <CarltonTab DisplayText="JSON Payloads">
                    <ViewModelViewer ViewModel="service.TestComponentViewModel" ViewModelChanged="service.UpdateTestComponentViewModel"></ViewModelViewer>
                </CarltonTab>
            </CarltonTabBar>
        </footer>
    }
</div>

