@inherits LayoutComponentBase

@inject TestBedViewModel vm

<div class="sidebar">
    <TestBedNavTree ViewModel="vm" />
</div>

<div class="main">
    <div class="content px-4">
        <TestBed ComponentType="vm.TestComponentType" ViewModel="vm.TestComponentViewModel" ComponentEventCallback="vm.AddComponentEvent"/>
    </div>
    <footer class="footer">
        <TabControl>
            <Tab DisplayText="Component Events">
               <EventConsole ViewModel="vm"></EventConsole>
            </Tab>
            <Tab DisplayText="JSON Payloads">
                <ViewModelViewer ViewModel="vm" ViewModelChanged="vm.UpdateTestComponentViewModel"></ViewModelViewer>
            </Tab>
        </TabControl>
    </footer>
</div>

<style>
    .sidebar {
        background-color: #263238;
        color: white;
    }

    .main .content {
        resize: vertical;
        overflow-y: hidden;
    }

    textarea {
        width: 100%;
        background-color: black;
        color: greenyellow;
    }
</style>

