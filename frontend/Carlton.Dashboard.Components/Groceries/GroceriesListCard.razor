@using Carlton.Base.Client.Components.Cards
@using Carlton.Dashboard.ViewModels
@using Carlton.Dashboard.Components.Common

@namespace Carlton.Dashboard.Components
@inherits CarltonComponentBase<Groceries>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <ListCard CardTitle="Groceries"
                         Items="ViewModel.Items">

            <ActionBarContent>
                <DashboardCardActionBar TViewModel="Groceries"
                                        Callback="OnComponentEvent"
                                        Status="ComponentStatus" />
            </ActionBarContent>

            <ItemTemplate Context="item">
                <GroceriesListItem ViewModel="item" />
            </ItemTemplate>
        </ListCard>
    </Content>
</CarltonCssWraper>

