@using Carlton.Dashboard.ViewModels

@namespace Carlton.Dashboard.Components
@inherits CarltonComponentBase<ApartmentStatuses>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <CarltonListCard CardTitle="Apartment Status"
                         Items="ViewModel.Statuses">

            <ActionBarContent>
                <DashboardCardActionBar TViewModel="ApartmentStatuses"
                                        Callback="OnComponentEvent"
                                        Status="ComponentStatus" />
            </ActionBarContent>

            <ItemTemplate Context="status">
                <ApartmentStatusListItem ViewModel="status"
                                         OnComponentEvent="base.OnComponentEvent" />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>






