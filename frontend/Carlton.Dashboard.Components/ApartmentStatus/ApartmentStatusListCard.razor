    <ActionBarContent>
        <DashboardCardActionBar OnComponentEvent="base.OnComponentEvent" ComponentStatus="base.ComponentStatus" />
    </ActionBarContent>

    <ItemTemplate Context="status">
        <ApartmentStatusListItem ViewModel="status"
