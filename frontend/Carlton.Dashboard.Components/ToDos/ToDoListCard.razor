@using Carlton.Dashboard.ViewModels

@namespace Carlton.Dashboard.Components
@inherits CarltonComponentBase<ToDos>


<ListCard CardTitle="To-Do's" Items="ViewModel.ToDoList">
    <ActionBarContent>
        <DashboardCardActionBar TViewModel="ToDos" Callback="() => base.OnComponentEvent.InvokeAsync()" Status="ComponentStatus" />
    </ActionBarContent>

    <ItemTemplate Context="toDo">
        <ToDoListItem ViewModel="toDo" OnComponentEvent="base.OnComponentEvent" />
    </ItemTemplate>
</ListCard>




