@using Carlton.Dashboard.ViewModels.ToDos

@inherits DashboardBaseComponent<ToDoListViewModel>

<CarltonCssWraper ComponentType="this.GetType()">
    <Content>
        <CarltonListCard CardTitle="To-Do's" Items="ViewModel.ToDoList">
            <ActionBarContent>
                <DashboardCardMenu TViewModel="ToDoListViewModel" Callback="OnComponentEvent" Status="ComponentStatus" />
            </ActionBarContent>

            <ItemTemplate Context="toDo">
                <ToDoListItem ViewModel="toDo" OnComponentEvent="OnComponentEvent" />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>



