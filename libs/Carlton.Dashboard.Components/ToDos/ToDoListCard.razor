@using Carlton.Base.Client.Status; 
@using Carlton.Dashboard.ViewModels.ToDos

@inherits CarltonComponentBase<ToDoListViewModel>

<CarltonCssWraper ComponentType="this.GetType()">
    <Content>
        <CarltonListCard CardTitle="To-Do's" Items="ViewModel.ToDoList">
            <ActionBarContent>
                <DashboardCardActionBar TViewModel="ToDoListViewModel" Callback="OnComponentEvent" Status="ComponentStatus" />
            </ActionBarContent>

            <ItemTemplate Context="toDo">
                <ToDoListItem ViewModel="toDo" OnComponentEvent="OnComponentEvent" />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>



