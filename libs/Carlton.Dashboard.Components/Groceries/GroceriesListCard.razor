@using Carlton.Base.Client.Components.Cards
@using Carlton.Dashboard.ViewModels.Groceries


@inherits DashboardBaseComponent<GroceriesListViewModel>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <CarltonListCard CardTitle="Groceries"
                         Items="ViewModel.Items">

            <ActionBarContent>
                <DashboardCardActionBar TViewModel="GroceriesListViewModel"
                                        Callback="OnComponentEvent"
                                        Status="ComponentStatus" />
            </ActionBarContent>

            <ItemTemplate Context="item">
                <GroceriesListItem ViewModel="item" />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>

