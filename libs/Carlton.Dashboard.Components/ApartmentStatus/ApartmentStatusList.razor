@using Carlton.Base.Client.Components.Cards
@using Carlton.Dashboard.ViewModels.ApartmentStatus


@inherits CarltonParentComponent<ApartmentStatusesViewModel>

<div class="apartment-status-list-card">
    <CarltonListCard CardTitle="Apartment Status" Items="ViewModel.Statuses">
        <ItemTemplate Context="status">
            <div class="row">
                <div class="col-6 text-center">
                    <span class="status-icon mdi mdi-24px @status.StatusIcon"></span>
                </div>
                <div class="col-6 text-center">
                    @if(status.StatusValue == ApartmentStatuses.Complete)
                    {
                        <span class="status-value-complete mdi mdi-24px mdi-check-circle"></span>
                    }
                    else
                    {
                        <span class="status-value-incomplete mdi mdi-24px mdi-alert"></span>
                    }
                </div>
            </div>
        </ItemTemplate>
    </CarltonListCard>
</div>

