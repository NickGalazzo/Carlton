@using Carlton.Dashboard.ViewModels.ApartmentStatus


@inherits DashboardBaseComponent<ApartmentStatusListViewModel>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <CarltonListCard CardTitle="Apartment Status"
                         Items="ViewModel.Statuses">

            <MenuCardContent>
                <DashboardCardMenu TViewModel="ApartmentStatusListViewModel" Callback="OnComponentEvent" Status="ComponentStatus" />
            </MenuCardContent>

            <ItemTemplate Context="status">
                <ApartmentStatusListItem ViewModel="status" OnComponentEvent="base.OnComponentEvent" />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>

