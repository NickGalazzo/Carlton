<div class="household-item">
    <div>
        <span class="item-name">@ViewModel.Name</span>
    </div>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: @((ViewModel.PercentRemaining).ToString() + '%')" aria-valuenow="@ViewModel.PercentRemaining" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>

@code{
    [Parameter]
    public Carlton.Dashboard.ViewModels.HouseholdItems.HouseholdItem ViewModel { get; set; }
}