@using Carlton.Base.Client.Components.Cards
@using Carlton.Dashboard.ViewModels.CountCards

<div class="carlton-count-card">
    <CarltonCard>
        <PrimaryCardContent>
            <div class="row">
                <div class="col-3 offset-1 count-icon mdi mdi-36px @(ViewModel.AccentColorClass) @(ViewModel.Icon)"></div>
                <span class="col-6 offset-1 count-message">@ViewModel.Message</span>
            </div>
        </PrimaryCardContent>
    </CarltonCard>
</div>

@code {
    [Parameter]
    public CarltonBaseCountCardViewModel ViewModel { get; set; }
}
