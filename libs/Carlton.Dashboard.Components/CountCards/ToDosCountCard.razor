@using Carlton.Dashboard.ViewModels

@namespace Carlton.Dashboard.Components
@inherits CarltonComponentBase<DashboardAggregation>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <DashboardCountCard Count="@ViewModel.Count"
                            MessageTemplate="@MESSAGE_TEMPLATE"
                            Icon="@ICON"
                            AccentColorClass="@ACCENT_COLOR" />
    </Content>
</CarltonCssWraper>


@code{
    private const string MESSAGE_TEMPLATE = "Open Tasks";
    private const string ICON = "mdi-clipboard-check";
    private const string ACCENT_COLOR = "accent-color-1";
}