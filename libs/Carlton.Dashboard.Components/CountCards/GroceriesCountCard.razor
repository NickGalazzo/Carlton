@using Carlton.Dashboard.ViewModels.CountCards

@inherits CarltonComponentBase<DashboardAggregation>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <DashboardCountCard Count="@ViewModel.Count"
                            MessageTemplate="@MESSAGE_TEMPLATE"
                            Icon="@ICON"
                            AccentColorClass="@ACCENT_COLOR"/>
    </Content>
</CarltonCssWraper>

@code{
    private const string MESSAGE_TEMPLATE = "Low Items";
    private const string ICON = "mdi-cart";
    private const string ACCENT_COLOR = "accent-color-3";
}