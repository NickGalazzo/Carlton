@using Carlton.Dashboard.ViewModels.ToDos


@inherits CarltonParentComponent<ToDoListViewModel>

<div class="to-do-list-card">
    <CarltonListCard CardTitle="To-Do's"
                     Items="ViewModel.ToDoList"
                     CardStatus="base.ComponentStatus">

        <MenuCardContent>
            <DashboardCardMenu TViewModel="ToDoListViewModel" Callback="OnComponentEvent" Status="ComponentStatus"/>
        </MenuCardContent>

        <ItemTemplate Context="toDo">
            <ToDoListItem ViewModel="toDo" OnComponentEvent="base.OnComponentEvent" />
        </ItemTemplate>
    </CarltonListCard>
</div>



