@using Carlton.Base.Client.Components.Cards
@using Carlton.Dashboard.ViewModels.DinnerGuests


@inherits DashboardBaseComponent<DinnerGuestsListViewModel>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <CarltonListCard CardTitle="Dinner Guests" SubTitle="Guests" Items="ViewModel.DinnerGuests">

            <MenuCardContent>
                <DashboardCardMenu TViewModel="DinnerGuestsListViewModel" Callback="OnComponentEvent" Status="ComponentStatus" />
            </MenuCardContent>

            <HeaderCardContent>
                <DinnerGuestsSelfStatus ViewModel="ViewModel.MyDinnerGuestStatus" OnComponentEvent="OnComponentEvent" />
            </HeaderCardContent>

            <ItemTemplate Context="guest">
                <DinnerGuestListItemWithIndicator ViewModel="guest" />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>



