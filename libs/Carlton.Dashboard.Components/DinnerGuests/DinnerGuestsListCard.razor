@using Carlton.Base.Client.Components.Cards
@using Carlton.Dashboard.Components.Common 
@using Carlton.Dashboard.ViewModels.DinnerGuests


@inherits CarltonComponentBase<DinnerGuests>

<CarltonCssWraper ComponentType="GetType()">
    <Content>
        <CarltonListCard CardTitle="Dinner Guests" SubTitle="Guests" Items="ViewModel.Items">
            <ActionBarContent>
                <DashboardCardActionBar TViewModel="DinnerGuests" Callback="OnComponentEvent" Status="ComponentStatus" />
            </ActionBarContent>

            <HeaderContent>
                <DinnerGuestsSelfStatus ViewModel="ViewModel.MyDinnerGuestStatus" OnComponentEvent="OnComponentEvent"  />
            </HeaderContent>

            <ItemTemplate Context="guest">
                <DinnerGuestsListItem ViewModel="guest" ShowIndicator="true"  />
            </ItemTemplate>
        </CarltonListCard>
    </Content>
</CarltonCssWraper>



