@namespace Carlton.Base.Client.Components.Cards

<div class="carlton-card">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@CardTitle</h5>
                <div class="header-content">
                    @HeaderCardContent
                </div>
                <div class="primary-content">
                    @PrimaryCardContent
                </div>
                <div class="secondary-content">
                    @SecondaryCardContent
                </div>
            </div>
        </div>
    </div>
</div>


@code{
    [Parameter]
    public string CardTitle { get; set; }
    [Parameter]
    public RenderFragment HeaderCardContent { get; set; }
    [Parameter]
    public RenderFragment PrimaryCardContent { get; set; }
    [Parameter]
    public RenderFragment SecondaryCardContent { get; set; }
}