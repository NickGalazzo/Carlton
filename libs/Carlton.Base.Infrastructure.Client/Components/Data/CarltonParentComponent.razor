@using Carlton.Base.Client.Components.Menu

@typeparam TViewModel

@code {
    [Parameter]
    public TViewModel ViewModel { get; set; }
    [Parameter]
    public EventCallback OnComponentEvent { get; set; }
    [Parameter]
    public ComponentStatus ComponentStatus { get; set; }

    protected virtual CarltonMenuItems MenuItems
    {
        get
        {
            return new CarltonMenuItems
                (
                    new List<CarltonMenuItem>
                    { 
                        new CarltonMenuItem("Refresh", () => OnComponentEvent.InvokeAsync(new CarltonComponentRefreshEvent<TViewModel>())),
                        new CarltonMenuItem("View", () => OnComponentEvent.InvokeAsync(new CarltonComponentDetailViewNavigationEvent<TViewModel>()))
                    }
                );
        }
    }
}

