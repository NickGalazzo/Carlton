
@inherits Card
@typeparam TItem

<div class="carlton-list-card">
    <Card CardTitle="@CardTitle">

        <HeaderContent>
            @HeaderContent
        </HeaderContent>

        <ActionBarContent>
            @ActionBarContent
        </ActionBarContent>

        <PrimaryCardContent>
            <div class="sub-title">@SubTitle</div>

            <ul>
                @foreach(var item in Items)
                {
                    <li>
                        @ItemTemplate(item)
                    </li>
                }
            </ul>
        </PrimaryCardContent>
    </Card>
</div>

@code{
    [Parameter]
    public string SubTitle { get; set; }
    [Parameter]
    public RenderFragment<TItem> ItemTemplate { get; set; }
    [Parameter]
    public IEnumerable<TItem> Items { get; set; }
}

