
<div class="menu">
    <a href="#" class="menu-root">
        @MenuTemplate
    </a>

    <div class="options">
        <ul>
            @foreach(var item in MenuItems)
            {            
                <li>
                    @MenuItemTemplate(item)
                </li>
            }
        </ul>
    </div>
</div>

@code{
    [Parameter]
    public IEnumerable<MenuItem> MenuItems { get; set; }
    [Parameter]
    public RenderFragment MenuTemplate { get; set; }
    [Parameter]
    public RenderFragment<MenuItem> MenuItemTemplate {get; set;}
}