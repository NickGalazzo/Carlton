@using Carlton.Base.Client.Components.Tab
@using Carlton.Base.Client.State
@using Carlton.TestBed.Client.Shared.EventConsole
@using Carlton.TestBed.Client.Shared.SourceViewer
@using Carlton.TestBed.Client.Shared.StatusSwitch
@using Carlton.TestBed.Client.Shared.ModelViewer


<CarltonTab DisplayText="Component Events" Icon="mdi-flash">
    <CarltonDataWrapper TViewModel="EventConsoleViewModel"
                        StateEvents="(new string[] {Carlton.TestBed.Client.State.TestBedState.COMPONENT_EVENT_ADDED })">
        <ChildComponent>
            <EventConsole ViewModel="@context.ViewModel"
                          OnComponentEvent="@context.OnComponentEvent" />
        </ChildComponent>
    </CarltonDataWrapper>
</CarltonTab>
<CarltonTab DisplayText="JSON Payloads" Icon="mdi-code-braces">
    <CarltonDataWrapper TViewModel="ModelViewerViewModel">
        <ChildComponent>
            <ModelViewer ViewModel="@context.ViewModel"
                         OnComponentEvent="@context.OnComponentEvent" />
        </ChildComponent>
    </CarltonDataWrapper>
</CarltonTab>
<CarltonTab DisplayText="Component Status" Icon="mdi-traffic-light">
    <CarltonDataWrapper TViewModel="StatusSwitchViewModel">
        <ChildComponent>
            <StatusSwitch ViewModel="@context.ViewModel"
                          OnComponentEvent="@context.OnComponentEvent" />
        </ChildComponent>
    </CarltonDataWrapper>
</CarltonTab>
<CarltonTab DisplayText="Source" Icon="mdi-source-branch">
    <CarltonDataWrapper TViewModel="SourceViewerViewModel">
        <ChildComponent>
            <SourceViewer ViewModel="@context.ViewModel"
                          OnComponentEvent="@context.OnComponentEvent" />
        </ChildComponent>
    </CarltonDataWrapper>
</CarltonTab>
<CarltonTab DisplayText="Tests" Icon="mdi-test-tube">
    @*<TestBedSourceViewer ComponentType="@Service.TestComponentType" />*@
</CarltonTab>
